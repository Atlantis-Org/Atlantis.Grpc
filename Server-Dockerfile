FROM registry.cn-shenzhen.aliyuncs.com/fnlinker-public/dotnet-core-aspnet:3.1 AS base
WORKDIR /app
ENV TZ=Asia/Shanghai
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

FROM registry.cn-shenzhen.aliyuncs.com/fnlinker-public/dotnet-core-sdk:3.1 AS build
WORKDIR /src
COPY ./Kadder.Simple.Server ./Kadder.Simple.Server
COPY ./Kadder ./Kadder
WORKDIR "/src"
RUN dotnet build "Kadder.Simple.Server/Kadder.Simple.Server.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "Kadder.Simple.Server/Kadder.Simple.Server.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "Kadder.Simple.Server.dll"]
